    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "calligralauncher",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland"
