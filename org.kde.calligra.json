    "cleanup": [
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/mkspecs",
        "/share/eigen3",
        "/share/kdevappwizard",
        "/share/pkgconfig",
        "*.a",
        "*.la"
